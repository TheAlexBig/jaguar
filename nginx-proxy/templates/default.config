http {
  upstream backend {
    server back-end:${BACKEND_PORT};
  }

  upstream frontend {
    server front-end:${FRONTEND_PORT};
  }

  server {
    listen 80;
    server_name localhost;

    location /api {
      proxy_pass http://backend;
      proxy_set_header X-Real-IP $remote_addr;
    }

    location / {
      proxy_pass http://frontend;
      proxy_set_header X-Real-IP $remote_addr;
    }
  }
}